<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="?attr/windows_bg">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="0dip"
        android:orientation="vertical" >
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:padding="10dip"
			android:orientation="vertical" >
          <LinearLayout
	         android:layout_width="fill_parent"
	         android:layout_height="wrap_content"
	         android:layout_marginTop="5.0dip">
		   
			 <Button
	              android:id="@+id/Buttonreadparameter"
				 style="@style/button_common_blue_s"
	              android:gravity="center"
	              android:text="@string/setparameter_readparameter" />
			  <EditText
	              android:id="@+id/EditTextmeterid"
	              android:layout_width="125dp"
	              android:layout_height="40.0dip"
	              android:background="@drawable/edit_text_x"
	              android:ems="10"
	              android:hint="@string/setparameter_meteridhint"
	              android:maxLength="8"
	              android:singleLine="true"
	              android:layout_weight="1"
				  android:layout_marginLeft="5dip"
				  android:inputType="number|numberDecimal"
	              android:textColor="@color/black" >

	          </EditText>
	          <Button
	              android:id="@+id/Buttonsetmeterid"
				  style="@style/button_common_blue_s"
	              android:gravity="center"
	              android:text="@string/setparameter_setmeterid"
	              android:layout_marginLeft="5dip"/>
		  </LinearLayout>
		  
		  <LinearLayout
	         android:layout_width="fill_parent"
	         android:layout_height="wrap_content"
	         android:layout_marginTop="15.0dip">
	          <Button
	              android:id="@+id/Buttonamendmeterid"
				  style="@style/button_common_blue_s"
	              android:gravity="center"
	              android:text="@string/setparameter_amendmeterid"/>

	          <EditText
	              android:id="@+id/EditTextamendmeterid"
	              android:layout_width="160.0dip"
	              android:layout_height="40.0dip"
	              android:layout_weight="1"
				  android:layout_marginLeft="5dip"
	              android:background="@drawable/edit_text_x"
	              android:ems="10"
	              android:hint="@string/setparameter_amendmeteridhint"
	              android:inputType="number|numberDecimal"
	              android:maxLength="8"
	              android:singleLine="true"
	              android:textColor="@color/black" >

	          </EditText>
	          <Button
	              android:id="@+id/Buttoninsteadmeterid"
				  style="@style/button_common_blue_s"
	              android:gravity="center"
	              android:text="@string/setparameter_insteadmeterid"
	              android:layout_marginLeft="5dip" />
		  </LinearLayout>

		  <LinearLayout
		      android:layout_width="fill_parent"
		      android:layout_height="wrap_content"
		      android:layout_gravity="center_horizontal"
		      android:layout_marginTop="15.0dip"
		      android:gravity="center_horizontal" >

	          <Button
	              android:id="@+id/Buttonopenvalve"
				  style="@style/button_common_blue_s"
	              android:gravity="center"
	              android:layout_weight="1"
	              android:text="@string/setparameter_openvalve"
	              android:layout_marginRight="10dip" />
	          <Button
	              android:id="@+id/Buttonclosevalve"
				  style="@style/button_common_blue_s"
	              android:layout_weight="1"
	               android:layout_marginLeft="10dip"
	              android:gravity="center"
	              android:text="@string/setparameter_closevalve" />
		  </LinearLayout>
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="15.0dip">
				<EditText
					android:id="@+id/edTopworxEndDate"
					android:layout_width="wrap_content"
					android:layout_height="50.0dip"
					android:layout_weight="1"
					android:gravity="center"
					android:background="@drawable/edit_text_x"
					android:textColor="@color/black">
				</EditText>
				<Button
					android:id="@+id/btnTopworxChoosedate"
					style="@style/button_common_blue_s"
					android:gravity="center"
					android:text="@string/topworx_choosedate" />
			</LinearLayout>
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="5.0dip">
				<Button
					android:id="@+id/btnTopworxEndTime"
					style="@style/button_common_blue"
					android:gravity="center"
					android:text="@string/setparameter_endtime" />
			</LinearLayout>
		  <LinearLayout
	         android:layout_width="fill_parent"
	         android:layout_height="wrap_content"
	         android:layout_marginTop="15.0dip">
			  <Button
				  android:id="@+id/Buttonchoosedate"
				  style="@style/button_common_blue_s"
				  android:gravity="center"
				  android:text="@string/setparameter_choosedate" />
	          <CheckBox
	              android:id="@+id/CheckBoxsyn"
	              android:layout_width="35dp"
	              android:layout_height="50.0dip"
	              android:checked="true"/>
	          <EditText
	              android:id="@+id/EditTextdatetime"
	              android:layout_width="wrap_content"
	              android:layout_height="60.0dip"
				  android:layout_weight="1"
	              android:background="@drawable/edit_text_x"
	              android:textColor="@color/black">
	          </EditText>
			  <Button
				  android:id="@+id/Buttonchoosetime"
				  style="@style/button_common_blue_s"
				  android:gravity="center"
				  android:text="@string/setparameter_choosetime" />
		  </LinearLayout>
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="5.0dip">
			<Button
				android:id="@+id/Buttonadjusttime"
				style="@style/button_common_blue"
				android:gravity="center"
				android:text="@string/setparameter_adjusttime" />
			</LinearLayout>
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="15.0dip">
			<Button
				android:id="@+id/btnSetCH"
				style="@style/button_common_blue_s"
				android:gravity="center"
				android:text="@string/topworx_setlorach" />
			<Spinner
				android:id="@+id/spinnerlorach"
				android:layout_weight="1"
				android:layout_width="220dip"
				android:layout_height="40.0dip"/>
			</LinearLayout>
		  <LinearLayout
	         android:id="@+id/linearLayout3"
	         android:layout_width="fill_parent"
	         android:layout_height="wrap_content"
			  android:layout_marginTop="15.0dip">
	         <TextView
	             android:id="@+id/TextViewlabel"
	             android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:text="@string/setparameter_sendlabel"
	             android:textColor="@color/black" />
	         <EditText
	             android:id="@+id/EditTextsend"
	             android:layout_width="0dip"
	             android:layout_height="100.0dip"
	             android:layout_weight="1"
	             android:background="@drawable/edit_text_x"
	             android:hint="@string/setparameter_sendtx"
	             android:textColor="@color/black"/>
	     </LinearLayout>

	     <LinearLayout
	         android:layout_width="fill_parent"
	         android:layout_height="55dp" 
	         android:gravity="center"
			 android:layout_marginTop="15.0dip">
	         <Button
	             android:id="@+id/Buttoncs16"
				 style="@style/button_common_blue_s"
	             android:gravity="center"
	             android:text="@string/setparameter_cs16"/>
	         <Button
	             android:id="@+id/Buttonsend"
				 style="@style/button_common_blue_s"
				 android:layout_marginLeft="15dip"
	             android:gravity="center"
	             android:text="@string/setparameter_send" />

		 </LinearLayout>
		</LinearLayout>

	</LinearLayout>

</ScrollView>